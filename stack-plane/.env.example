# Plane Stack - Environment Variables
# Copy to Portainer environment variables (do not create .env file!)

# ============================================
# PostgreSQL Database
# ============================================
POSTGRES_USER=plane
POSTGRES_PASSWORD=<generate-secure-password>

# ============================================
# Django Secret Key
# ============================================
# Generate with: python3 -c 'import secrets; print(secrets.token_hex(50))'
SECRET_KEY=<generate-django-secret-key>

# ============================================
# MinIO (S3-compatible Storage)
# ============================================
MINIO_ROOT_USER=plane-minio
MINIO_ROOT_PASSWORD=<generate-secure-password>

# ============================================
# Email Configuration (Optional)
# ============================================
# Leave empty to disable email features
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=1
DEFAULT_FROM_EMAIL=noreply@project.devops.local

# ============================================
# Performance Settings
# ============================================
# Number of Gunicorn worker processes (recommended: 2-4 for small deployments)
GUNICORN_WORKERS=2

# ============================================
# Security Settings
# ============================================
# Enable user self-registration (1=enabled, 0=disabled)
ENABLE_SIGNUP=1
