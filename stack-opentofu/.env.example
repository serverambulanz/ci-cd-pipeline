# OpenTofu Stack Environment Variables
# Copy to .env and fill in your values (or manage via Portainer)

# AWS Credentials (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=eu-central-1

# Scaleway Credentials (optional)
SCW_ACCESS_KEY=
SCW_SECRET_KEY=
SCW_DEFAULT_PROJECT_ID=
SCW_DEFAULT_REGION=fr-par

# Terraform Cloud Token (optional)
TFC_TOKEN=

# Git Configuration
GIT_AUTHOR_NAME=DevOps Bot
GIT_AUTHOR_EMAIL=devops@devops.local
GIT_COMMITTER_NAME=DevOps Bot
GIT_COMMITTER_EMAIL=devops@devops.local

# Atlantis Configuration (optional - for Web UI)
ATLANTIS_GITEA_USER=atlantis
ATLANTIS_GITEA_TOKEN=changeme
ATLANTIS_WEBHOOK_SECRET=changeme_webhook_secret
