# Taiga Stack Environment Variables
# Based on official taigaio/taiga-docker repository
# Copy to .env and fill in your values (or manage via Portainer)

# PostgreSQL Database
POSTGRES_USER=taiga
POSTGRES_PASSWORD=changeme_secure_db_password

# Taiga Secret Key (generate with: python -c 'import secrets; print(secrets.token_hex(32))')
SECRET_KEY=changeme_secret_key_must_be_at_least_32_chars_long_use_hex

# Taiga URL Configuration
TAIGA_SCHEME=http
TAIGA_DOMAIN=taiga.devops.local
WEBSOCKETS_SCHEME=ws
SUBPATH=""

# RabbitMQ Configuration
RABBITMQ_USER=taiga
RABBITMQ_PASS=changeme_rabbitmq_password
RABBITMQ_VHOST=taiga
RABBITMQ_ERLANG_COOKIE=changeme_erlang_cookie_secret

# Email Configuration (optional - console backend for testing)
EMAIL_BACKEND=console
EMAIL_DEFAULT_FROM=taiga@taiga.devops.local
EMAIL_USE_TLS=False
EMAIL_USE_SSL=False
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# Attachments
ATTACHMENTS_MAX_AGE=360

# Telemetry
ENABLE_TELEMETRY=False
